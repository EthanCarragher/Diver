-------------------------------			
---Common fields---------------			;EFN = empty for none

main_chain = 'testchains/newchain.txt'		;Filename of chain to operate on
comparison_chain = 'testchains/oldchain.txt'	;Filename of secondary chain to operate on, for comparison ()

do_posterior_pdf = T				;Parse, script or plot posterior pdfs
do_profile_like = T 				;Parse, script or plot chain into profile likelihoods
contour_levels = 68.3 95.4			;Contour levels to plot (EFN; script ignores actual values)
oneD_plot_quantities = 					;Parameters/observables to construct 1D plots of (EFN)
twoD_plot_quantities = {3,2} {5,4}		;Parameters/observable combinations to make 2D plots of (EFN)

-------------------------------
---Parsing---------------------

number_of_bins = 60				;Number of bins in each direction to sort samples into
interpolated_resolution = 500			;Resolution of binwise interpolation for plotting (~300+ for publication)

chain_type = MultiNest				;Algorithm used to generate chain (valid: MCMC, MultiNest, other)
compute_evidence = F				;Compute and print evidence (only if chain_type = MCMC)

use_log_scale = 2 3				;Parameters/observables that need to be converted to a log scale for display (EFN)
quantity_rescalings = 4:1e-3			;Scaling factors to apply to any columns in chains (EFN)
labels_from_file = 				;Either a filename or blank (quantity_labels is ignored if a filename is given)
quantity_labels = 0:'multiplicity' 1:'-lnlike' 2:'$\log_{10}\left(m_0/\mathrm{TeV}\right)$' 3:'$\log_{10}\left(m_\frac12/\mathrm{TeV}\right)$' 4:'$A_0$ (TeV)' 5:'$\tan\beta$' 
						;labels for columns in chains (LaTeX for all but multiplicity, prior and likelihood)
-------------------------------
---Scripting-------------------

legend_on_1D = 					;1D plots that should include legends
legend_locations_1D = 2:'tr'			;Locations of legends for 1D plots (subset of twoD_plot_quantities)
plot_as_histograms_1D = F			;Plot 1D distributions as histograms with no interpolation (not yet implemented)

legend_on_2D = {3,2} {5,4}			;2D plots that should include legends
legend_locations_2D = {3,2}:'cl' {5,4}:'bl'	;Locations of legends for 2D plots (single location or partial list that will be filled in with 'bl') 
extra_legend_lines = 'Flat priors' 'CMSSM $\mu>0$';Additional text lines to be included in any legends (EFN)
key_on_2D = {3,2}				;2D plots that should include keys for best fit, posterior mean and/or reference pt
key_locations_2D = {3,2}:'bl'			;Locations of keys for 2D plots
plot_colourbar_2D = {3,2} {5,4}			;2D plots that should include colourbars

blame = 'pippi v0.2'				;Credit line to be placed in top corner of all plots

plot_comparison = T				;Overplot distributions from comparisonFilename in 1D plots and contours in 2D plots

plot_posterior_mean_on_posterior_pdf = T	;Indicate the posterior mean in all posterior pdf plots
plot_posterior_mean_on_profile_like = T		;Indicate the posterior mean in all profile likelihood plots
plot_best_fit_on_posterior_pdf = T		;Indicate the best fit in all posterior pdf plots
plot_best_fit_on_profile_like = T		;Indicate the best fit in all profile likelihood plots

axis_ranges = 2:{1.8,3.55} 3:{2.05,3.6} 4:{-4,4};Axis ranges for parameters/observables (set from chain contents where absent)

reference_point = 				;Coordinates of reference point (only plotted where one of the listed axes is present)

colour_scheme = icecube				;A recognised pippi colourScheme object (BlueGold,IceCube,SBClassic,
						; NightOfTheAllanachs,etc - add your own to colourSchemes.py)
-------------------------------
---Plotting--------------------

output_dir = 'testplots'			;Dierctory to save plots in (EFN; default is to place plots in same folder as chains, etc)
file_prefix = 'plot_'				;Prepend prefix to plot filenames (EFN)
file_suffix = '_example'			;Append suffix to filenames of output plots (EFN)
